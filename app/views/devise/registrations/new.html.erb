<h2 class="page-title">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: 'login-title' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'login-form' %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'login-title' %>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" , class: 'login-form'%>
  </div>

  <div class="field">
    <%= f.label :password_confirmation , class: 'login-title'%><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'login-form' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" ,class: "btn"%>
  </div>
<% end %>
